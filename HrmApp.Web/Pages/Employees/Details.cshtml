@page "{id:int}"
@model HrmApp.Web.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Employee Details";
}

<h3>@ViewBag.Title</h3>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Department)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.IsActive)
        </dt>
        <dd class="col-sm-10">
            @(Model.Employee.IsActive ? "Yes" : "No")
        </dd>
    </dl>
</div>
<div>

    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./List" class="btn btn-secondary">Back To List</a>
</div>
