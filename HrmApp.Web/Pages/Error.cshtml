@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h1 class="text-danger">Error @Model.StatusCode</h1>
        <h2 class="text-danger">Oops!!! An error occurred while processing your request.</h2>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="mt-3"><strong>Details:</strong> @Model.ErrorMessage</p>
        }
        
        @if (Model.ShowRequestId)
        {
            <p class="mt-2"><small>Request ID: @Model.RequestId</small></p>
        }

        @if (Model.ShowDevelopmentDetails)
        {
            <div class="mt-4 p-3 bg-light rounded">
                <h4>Development Details</h4>
                <p>@Model.ExceptionDetails</p>
                <p class="mb-0"><small>Stack Trace: @Model.StackTrace</small></p>
            </div>
        }
    </div>
    
    <div class="mt-4">
        <a href="/" class="btn btn-primary">Return to Home</a>
        <button onclick="history.back()" class="btn btn-secondary">Go Back</button>
    </div>
</div>